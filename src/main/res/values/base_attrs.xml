<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MultiStateLayout">
        <!-- disable interaction while state is requesting. the default is false. -->
        <attr name="msl_disable_when_requesting" format="boolean" />
        <!-- always show content view. the default is false. -->
        <attr name="msl_always_show_content" format="boolean" />

        <attr name="msl_loadingView" format="reference" />
        <attr name="msl_requestingView" format="reference" />
        <attr name="msl_emptyView" format="reference" />
        <attr name="msl_errorView" format="reference" />
        <attr name="msl_net_errorView" format="reference" />
        <attr name="msl_server_errorView" format="reference" />
        <attr name="msl_viewState" format="enum">
            <enum name="content" value="1" />
            <enum name="loading" value="2" />
            <enum name="empty" value="3" />
            <enum name="error" value="4" />
            <enum name="net_error" value="5" />
            <enum name="server_error" value="6" />
            <enum name="requesting" value="7" />
            <enum name="blank" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SimpleMultiStateLayout">
        <attr name="msl_errorImg" format="reference" />
        <attr name="msl_errorText" format="string" />
        <attr name="msl_errorAction" format="string" />

        <attr name="msl_net_errorImg" format="reference" />
        <attr name="msl_net_errorText" format="string" />
        <attr name="msl_net_errorAction" format="string" />

        <attr name="msl_server_errorImg" format="reference" />
        <attr name="msl_server_errorText" format="string" />
        <attr name="msl_server_errorAction" format="string" />

        <attr name="msl_emptyImg" format="reference" />
        <attr name="msl_emptyText" format="string" />
        <attr name="msl_emptyAction" format="string" />
    </declare-styleable>

    <declare-styleable name="ScrollChildSwipeRefreshLayout">
        <attr name="srl_target_id" format="reference" />
        <!-- an array of colors.  -->
        <attr name="srl_color_scheme" format="reference" />
        <!-- restore refresh state. default is true.  -->
        <attr name="srl_restore_refresh_status" format="boolean" />
        <!-- intercept the touch events. default is true.  -->
        <attr name="srl_intercept_event" format="boolean" />
    </declare-styleable>

</resources>